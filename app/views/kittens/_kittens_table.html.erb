<table class="py-5 px-4">
  <caption>All Kittens</caption>
  <thead>
    <tr class="rounded-t">
      <th class="border text-xl py-2 px-4">Name</th>
      <th class="border text-xl py-2 px-4">Age</th>
      <th class="border text-xl py-2 px-4">Cuteness</th>
      <th class="border text-xl py-2 px-4">Softness</th>
    </tr>
  </thead>
  <tbody>
    <% kittens.each do |kitten| %>
      <tr class="">
        <td class="border text-xl py-2 px-4"><%= kitten.name %></td>
        <td class="border text-xl py-2 px-4"><%= kitten.age %></td>
        <td class="border text-xl py-2 px-4"><%= kitten.cuteness %></td>
        <td class="border text-xl py-2 px-4"><%= kitten.softness %></td>
        <td class="text-xl flex py-2 px-4 block justify-around">
          <%= link_to "Edit", edit_kitten_path(kitten.id), class: "btn-primary-sm text-center py-2 px-4 mr-4" %>
          <%= link_to "Delete", kitten_path(kitten.id), method: 'destroy',  class: "btn-primary-sm text-center py-2 px-4 ml-4" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>